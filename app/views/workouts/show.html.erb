<div class="jumbotron">
  <h1 class="display-4"><%= @workout.title %></h1>
  <p class="lead"><%= @workout.date %></p>

  <hr class="my-4">
  <p><%= @workout.notes %></p>

  <p>
    <table class="table table-striped table-borderless">
        <thead class="table-dark">
            <tr>

                <th>Exercise</th>
                <th>Sets</th>
                <th>Reps P/S</th>
                <th>RPE</th>
                <th>Weight (kg)</th>

            </tr>
        </thead>

        <tbody>
            <% @workout.exercises.each do |exercise| %>
                <tr>
                    <td><%= exercise.name %></td>
                    <td><%= exercise.sets %></td>
                    <td><%= exercise.reps %></td>
                    <td><%= exercise.rpe %></td>
                    <td><%= exercise.weight %></td>
            
                    <br/>
                </tr>
            <% end %>
        </tbody>

    </table
  </p>

  <p class="lead">
    <%= link_to 'Back', :back, class:"btn btn-secondary" %>
    <%= link_to 'Edit Workout', edit_workout_path(@workout), class:"btn btn-outline-warning" %>
  </p>

</div>
