<div class="jumbotron">
  <h1 class="display-4"><%= @workout.title %></h1>
  <p class="lead"><%= @workout.date %></p>

  <hr class="my-4">
  <p><%= @workout.notes %></p>

  <p>
    <table class="table table-striped table-borderless">
        <thead class="table-dark">
            <tr>

                <th>Exercise</th>
                <th>Sets</th>
                <th>Reps P/S</th>
                <th>RPE</th>
                <th>Weight (kg)</th>

            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Split Squats</td>
                <td>3</td>
                <td>10</td>
                <td>8</td>
                <td>18</td>
            </tr>

            <tr>
                <td>Back Rows</td>
                <td>3</td>
                <td>8</td>
                <td>8</td>
                <td>60</td>
            </tr>

            <tr>
                <td>Goblet Squats</td>
                <td>4</td>
                <td>12</td>
                <td>9</td>
                <td>34</td>
            </tr>

            <tr>
                <td>Lat Pull Downs</td>
                <td>3</td>
                <td>8</td>
                <td>7</td>
                <td>55</td>
            </tr>
        </tbody>

    </table
  </p>

  <p class="lead">
    <%= link_to 'Back', :back, class:"btn btn-secondary" %>
    <%= link_to 'Edit Workout', edit_workout_path(@workout), class:"btn btn-outline-warning" %>
  </p>

</div>
