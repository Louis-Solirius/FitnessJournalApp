<h1>New Workout Entry</h1>

<%= form_with model: @workout do |form| %>

    <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :date %>
        <%= form.date_select :date %>
    </div>

    <div>
        <%= form.label :notes %>
        <%= form.text_area :notes %>
    </div>

    <%= form.button %>

<% end %>